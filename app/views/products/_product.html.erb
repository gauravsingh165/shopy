<div class="container my-5">
  <p style="color: green"><%= notice %></p>
  <hr>
  <h1 style="background-color: blue; text-align: center">Products</h1>
  <hr>
  <div id="products" class="mx-3">
    <% @products.each do |product| %>
      <div id="<%= dom_id product %>">
        <p>
          <strong>Title:</strong>
          <%= product.title %>
        </p>
        <p>
          <strong>Price:</strong>
          <%= product.price %>
        </p>
         <p>
          <strong>Sales Count:</strong>
          <%= product.sales_count %>
        </p>
        <%= link_to "Show this product", shop_path(product) %>
        <p>
          <%= form_for @order_item, remote: true, url: order_items_path do |f| %>
            <%= f.hidden_field :product_id, value: product.id %>
            <%= f.number_field :quantity, min: 1 %>
            <%= f.submit "Add to Cart" %>
          <% end %>
        </p>
        <hr>
      </div>
    <% end %>
  </div>
</div>
